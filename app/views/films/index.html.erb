<h1>Listing films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Runtime</th>
      <th>Cover</th>
      <th>Release date</th>
      <th>Plot</th>
      <th>Rating</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.runtime %></td>
        <td><%= film.cover %></td>
        <td><%= film.release_date %></td>
        <td><%= film.plot %></td>
	<td><%= rating_for film, "rating" %></td>
        <td><%= link_to 'Show', film %></td>
	

		<% if user_session != nil %>
			<% if current_user.has_role? :admin %>
    		<td><%= link_to 'Edit', edit_film_path(film) %></td>
		<% end %>
		<% end %>

		<% if user_session != nil %>
			<% if current_user.has_role? :admin %>
    	<td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	 	<% end %>
		<% end %>
		  
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %>

<br><br>

